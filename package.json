{
  "name": "HC_OFF_SUPPLIES",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "author": "christoph@unexist.dev",
  "license": "Apache-2.0",
  "repository": "https://github.com/unexist/sap-btp-officesupplies-hana.git",
  "engines": {
    "node": ">18.0.0"
  },
  "private": true,
  "dependencies": {
    "@sap/cds": "^6.8.4",
    "@sap/cds-dk": "^7",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3",
    "@sap/hdbext": ">7",
    "express": "^4",
    "hdb": ">0.19.0",
    "sap-hdbext-promisfied": "^2.202308.1",
    "passport": "^0"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.108.12",
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run",
    "watch-products": "cds watch --open products/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      }
    }
  },
  "sapux": [
    "app/products"
  ]
}
